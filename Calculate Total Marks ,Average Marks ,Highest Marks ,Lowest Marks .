int part1(int m[],int n)
{
    static int total;
    int i;
    for(i=0;i<n;i++)
    {
        total=total+m[i];
    }
    return total;

}
void part2(int m,int n)
{
    float arg= (float)m/n;
    printf("Average Marks: %.2f\n",arg);
}
void part3(int m[],int n)
{
    int i,j,c;
    for(i=0;i<n;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(m[i]>m[j])
            {
                c=m[i];
                m[i]=m[j];
                m[j]=c;
            }
        }
    }

}
