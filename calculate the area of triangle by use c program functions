int part1(int l[])
{
    if((l[0]+l[1])>l[2] || (l[1]+l[2])>l[0] || (l[2]+l[0])>l[1] )
    {
        printf("The given lengths are form a triangle.");
        return 0;
    }
    else
    {
        printf("the given lengths are not form a triangle.");
        return 1;
    }
}


