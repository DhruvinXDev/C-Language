    while(1)
    {
         printf("Enter matchstick :");
         scanf("%d",&u);
         c=5-u;
         m=m-u-c;
         printf("computer choose matchstick is %d \n",c);
         printf("Available matchstick is : %d \n",m);
         if(u>4)
         {
             printf("please enter valid matchstick 1 to 4.\n");
             continue;
         }
     if(m==1)
     {
         printf("-------------------------------------------\n");
         printf("You are loses the game.\n");
         printf("-------------------------------------------\n");
         break;
     }

    }
      printf("-------------------------------------------\n");
     printf("My Name Is Dhruvin Vaghasiya. \n My Id Number Is 24TCEKSZ.");
