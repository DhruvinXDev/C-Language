#include<stdio.h>

void main()
{
    int day,cost,tday=0;
    cost=200;//total cost

    for (day=2;day<=100;day=day+2)
    {
      tday++;//total even day
    }
    printf("total events day are %d.\n",tday);
    printf("the total budget is %d.\n",tday*cost);
    printf("----------------------------------------------------- \n ");
 printf("My Name Is Dhruvin Vaghasiya. \nMy Id Number Is 24CE137.");
}

