#include<stdio.h>
void main()
{
    char a[100];
    int x,i,j,l1=0;
    char b[100];
    printf("Enter the note :");
       //scanf("%s",a); // for only one word has an input
       gets(a); // for note input

       // calculating the length of a note
       for(x=0;a[x]!='\0';x++)
         {
           l1++;
         }

      for(i=(l1-1),j=0;i>=0;i--,j++)
       {
       b[j]=a[i];
       }
       b[j]='\0';
       printf("%s",b);
 printf("----------------------------------------------------- \n");
    printf("My Name Is Dhruvin Vaghasiya. \nMy Id Number Is 24CE137.");

}
