#include<stdio.h>
void main()
{
    char a[100];
    int x,i,j,l1=0;
    char b[100];
    printf("Enter the note :");
       //scanf("%s",a); // for only one word has an input
       gets(a); // for note input

       // calculating the length of a note
       for(x=0;a[x]!='\0';x++)
         {
           l1++;
         }

      for(i=(l1-1);i>=0;i--)
       {
       b[i]=a[i];
       }
       b[i]='\0';
       printf("Copy string is :%s",b);

}
