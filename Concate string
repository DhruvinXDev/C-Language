        gets(a); // for note input

   // calculating the length of a note
   for(x=0;a[x]!='\0';x++)
   {
       l1++;
   }

       printf("Enter the 2nd note for compare string :");
       gets(c);
   for(y=0;c[y]!='\0';y++)
   {
       l2++;
   }
   for(z=0;z<(l1+l2);z++)
   {
       b[z]=a[z];
       if(z>=l1)
       {
           z=z-l1-1;
           b[z]=c[z];
       }

   }
printf("----------------------------------------------------- \n ");
